<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_back"
        android:paddingHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="Setting"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivBack"
        app:layout_constraintStart_toEndOf="@+id/ivBack"
        app:layout_constraintTop_toTopOf="@id/ivBack" />

    <View
        android:id="@+id/vCameraSetting"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Camera Settings"
        app:layout_constraintBottom_toBottomOf="@+id/vCameraSetting"
        app:layout_constraintStart_toStartOf="@+id/vCameraSetting"
        app:layout_constraintTop_toTopOf="@+id/vCameraSetting" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Camera zoom"
        app:drawableStartCompat="@drawable/ic_zoom"
        app:layout_constraintBottom_toBottomOf="@+id/vCameraZoom"
        app:layout_constraintStart_toStartOf="@+id/vCameraZoom"
        app:layout_constraintTop_toTopOf="@+id/vCameraZoom"
        app:tint="@color/black" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/swZoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:thumb="@drawable/custom_thumb"
        android:track="@drawable/custom_switch_track"
        app:layout_constraintBottom_toBottomOf="@+id/vCameraZoom"
        app:layout_constraintEnd_toEndOf="@id/vCameraZoom"
        app:layout_constraintTop_toTopOf="@+id/vCameraZoom"
        app:thumbTint="@color/white" />

    <View
        android:id="@+id/vCameraZoom"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vCameraSetting" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dvZoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/vCameraZoom" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Mirror mode"
        app:drawableStartCompat="@drawable/ic_mirror"
        app:layout_constraintBottom_toBottomOf="@+id/vMirrorMode"
        app:layout_constraintStart_toStartOf="@+id/vMirrorMode"
        app:layout_constraintTop_toTopOf="@+id/vMirrorMode"
        app:tint="@color/black" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/swMirrorMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:thumb="@drawable/custom_thumb"
        android:track="@drawable/custom_switch_track"
        app:layout_constraintBottom_toBottomOf="@+id/vMirrorMode"
        app:layout_constraintEnd_toEndOf="@id/vMirrorMode"
        app:layout_constraintTop_toTopOf="@+id/vMirrorMode"
        app:thumbTint="@color/white" />

    <View
        android:id="@+id/vMirrorMode"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dvZoom" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dvMirror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/vMirrorMode" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Save Location"
        app:drawableStartCompat="@drawable/ic_save"
        app:layout_constraintBottom_toBottomOf="@+id/vSaveLocal"
        app:layout_constraintStart_toStartOf="@+id/vSaveLocal"
        app:layout_constraintTop_toTopOf="@+id/vSaveLocal"
        app:tint="@color/black" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_next"
        app:layout_constraintBottom_toBottomOf="@+id/vSaveLocal"
        app:layout_constraintEnd_toEndOf="@+id/vSaveLocal"
        app:layout_constraintTop_toTopOf="@+id/vSaveLocal" />

    <View
        android:id="@+id/vSaveLocal"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dvMirror" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/vSaveLocal" />


</androidx.constraintlayout.widget.ConstraintLayout>